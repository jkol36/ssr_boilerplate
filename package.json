{
  "name": "ssr_boilerplate",
  "version": "1.0.0",
  "description": "Express app serving react via webpack.",
  "main": "/src/server/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "wp-static": "cd src/config/webpack && webpack --watch --config dev.js",
    "wp-dev": "cd src/config/webpack && webpack-dev-server --open --config dev.js",
    "build": "cd src/config/webpack && webpack --config prod.js",
    "static": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "http": "http-server src/dist",
    "heroku-postbuild": "npm install && npm run build",
    "start": "npm run static"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nameer-rizvi/ssr_boilerplate.git"
  },
  "keywords": [
    "node",
    "express",
    "react",
    "webpack",
    "babel",
    "ssr"
  ],
  "author": "Nameer Rizvi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nameer-rizvi/ssr_boilerplate/issues"
  },
  "engines": {
    "node": "10.x"
  },
  "homepage": "https://github.com/nameer-rizvi/ssr_boilerplate#readme",
  "devDependencies": {
    "@babel/core": "^7.6.2",
